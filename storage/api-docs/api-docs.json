        "/api/articles/search": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "operationId": "b2a37f58fc1f822aac6033aeca788724",
                "parameters": [
                    {
                        "name": "source",
                        "in": "query",
                        "description": "source",
                        "example": "bbc-news"
                    },
                    {
                        "name": "published_at",
                        "in": "query",
                        "description": "published_at",
                        "example": "2023-12-03"
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "category",
                        "example": "sport"
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "keywords",
                        "example": "Olympics 2024"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "searched  articles"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/get-user-preference": {
            "get": {
                "summary": "Get user preferences",
