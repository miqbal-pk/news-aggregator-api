                    "200": {
                        "description": "An example resource"
                    }
                }
            }
        },
        "/api/set-user-preference": {
            "post": {
                "summary": "Store user preferences",
                "operationId": "571a9408fd5adb0e0a69a0ae9274992b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "preferences[authors][0]": {
                                        "description": "Author 1",
                                        "type": "string"
                                    },
                                    "preferences[authors][1]": {
                                        "description": "Author 2",
                                        "type": "string"
                                    },
                                    "preferences[categories][0]": {
                                        "description": "sport",
                                        "type": "string"
                                    },
                                    "preferences[categories][1]": {
                                        "description": "art",
                                        "type": "string"
                                    },
                                    "preferences[sources][0]": {
                                        "description": "bbc-news",
                                        "type": "string"
                                    },
                                    "preferences[sources][1]": {
                                        "description": "bbc-news",
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Preferences saved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/get-user-feeds": {
            "get": {
